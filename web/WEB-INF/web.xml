<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CreateId</servlet-name>
        <servlet-class>com.niit.controler.Createuser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.niit.controler.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarDetails</servlet-name>
        <servlet-class>com.niit.controler.AddCarDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOrderServlet</servlet-name>
        <servlet-class>com.niit.controler.AdOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCarImageServlet</servlet-name>
        <servlet-class>com.niit.controler.UpdateCarImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyCarDetailsServlet</servlet-name>
        <servlet-class>com.niit.controler.ModifyCarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellCarDetailsServlet</servlet-name>
        <servlet-class>com.niit.controler.SellCarDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCarServlet</servlet-name>
        <servlet-class>com.niit.controler.UpdateCarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>com.niit.controler.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>com.niit.controler.ChangePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateId</servlet-name>
        <url-pattern>/create.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarDetails</servlet-name>
        <url-pattern>/addcar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCarImageServlet</servlet-name>
        <url-pattern>/updatecarimage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellCarDetailsServlet</servlet-name>
        <url-pattern>/SellCar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyCarDetailsServlet</servlet-name>
        <url-pattern>/Modify.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCarServlet</servlet-name>
        <url-pattern>/UpdateCar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/Logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/passchange.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOrderServlet</servlet-name>
        <url-pattern>/AddOrder.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            300
        </session-timeout>
    </session-config>
</web-app>
